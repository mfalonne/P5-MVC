{% extends "base.twig" %}

{% block content %}
    {% include 'headerBlog.twig' %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="m-3">
                Mes derniers articles
                </h1>
                {% for post in posts %}
                    <div class="card mb-3">
                        {# <img src="..." class="card-img-top" alt="..."> #}
                        <div class="card-body">
                            <h2>
                                <a href="/blog/view?id={{ post.id }}">{{ post.title }}</a>
                            </h2>
                            <small class="text-bg-primary">
                                Publi√© le : {{ post.created_at }}
                            </small>
                            <p>
                                {{ post.content|slice(0, 150) }}...
                            </p>
                            <div class="mt-3">  
                                <a href="./post/{{ post.id }}" class="btn btn-primary">
                                Lire Plus...
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
